@model TelematWeb.Areas.Admin.Models.FormsViewModel.MarkerMapBase

<div id="map" style="width:900px; height:350px;"></div>
<label>Nombre: </label>
<label>@Model.Nombre</label>
<label>Latitud: </label>
<label>@Model.Latitud</label>
<label>Longitud: </label>
<label>@Model.Longitud</label>

<script id="dxss_myCode2" type="text/javascript">
    window.initMap = function () {
        //var uluru = { lat: 40.297166, lng: -3.429771 };
        var uluru = { lat: @Model.Latitud, lng: @Model.Longitud };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 12,
            center: uluru 
        });

        
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
        // Make the marker-pin blue! 
        marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')

        // put in some information about each json object - in this case, the opening hours. 
        var infowindow = new google.maps.InfoWindow({
            content: "<div class='infoDiv'><h2>" + @Model.Nombre + "</div></div>"
        });
        // finally hook up an "OnClick" listener to the map so it pops up out info-window when the marker-pin is clicked! 
        google.maps.event.addListener(marker, 'click', function () {
            infowindow.open(map, marker);
        });
    };
    
    MVCxClientGlobalEvents.ControlsInitialized.AddHandler(function (s, e) {
        initMap();
    });
</script>

